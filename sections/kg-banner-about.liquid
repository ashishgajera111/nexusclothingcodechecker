<section class="kg-about-banner-section">
  <div class="t4s-container">
    <div class="kg-about-banner-wrapper">
      {% if section.settings.heading != blank or section.settings.subheading != blank %}
        <div class="kg-heading-sub_title">
          {% if section.settings.heading != blank %}
            <h3><span>{{ section.settings.heading }}</span></h3>
          {% endif %}
          {% if section.settings.subheading != blank %}
            <p>{{ section.settings.subheading }}</p>
          {% endif %}
        </div>
      {% endif %}

      {% assign has_images = false %}
      {% for block in section.blocks %}
        {% if block.type == "image" and block.settings.image != blank %}
          {% assign has_images = true %}
        {% endif %}
      {% endfor %}

      {% if has_images %}
        <div class="kg-about-banner-holder">
          {% for block in section.blocks %}
            {% if block.type == "image" and block.settings.image != blank %}
              <div class="kg-about-banner-holder-item">
                <figure>
                  <img src="{{ block.settings.image | img_url: 'original' }}" alt="">
                </figure>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>



{% schema %}
{
  "name": "Banner about",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Nexus Clothing - Edgy Streetwear"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Our brand marries bold, innovative designs with the gritty essence of street culture, creating distinctive apparel for those who lead, not follow."
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner about",
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
